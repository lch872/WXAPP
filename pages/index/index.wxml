<!--index.wxml-->
<view class='page'>
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text bindtap='jumpManager' class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
</view>

<view  class='picker-view'>
  <view wx:for="{{pickerData}}" class="section">
    <view class="section__title">{{pickerData[index].title}}</view>
    <picker bindchange="bindPickerChange" value="{{pickerData[index].newindex}}" data-current="{{pickerData[index].section}}" range="{{pickerData[index].data}}">
      <view class="picker">{{pickerData[index].data[pickerData[index].newindex]}}</view>
    </picker>
  </view>
</view>

<button bindtap='bindViewTap' class='applyBtn'>确定</button> 

<text bindtap='cancelApply' style='color:#939293;font-size:25rpx;float:right;margin-top:50rpx;margin-right:6%;'>时间冲突,取消报名</text>

</view>






