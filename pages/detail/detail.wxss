page {
  height: 100%;
  display:flex;
  justify-content:center;
  flex-direction:column;
}

.table-view{
  margin-top: 30rpx;
}

.table-content{
    margin-top: 15rpx;
    display: flex;
    height: 50rpx;
    align-items:center;
} 
.table-content-tag{
  margin-left: 20rpx;
    width: 35rpx;
    height: 35rpx;
}

.table-content-text{
    text-align: left;
    margin-right: 5rpx;
    margin-left: 15rpx;
    color: black;
    font-size: 30rpx;
}

.table-line{
 width: 93%;
 height: 2rpx;
 margin-top: 20rpx;
 margin-left: 20rpx;
 margin-right: 5rpx;
 background-color: #F2F2F2;
}

.list-view{
  display:flex; 
  align-items:center;
  margin-top: 15rpx;
}

.list-view-apply{
  text-align:center;
  font-size: 32rpx;
  color:#46C9A3;
  margin-left:30rpx;
  margin-bottom: 10rpx;
  -webkit-line-clamp:2;
}
.list-view-icon{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.list-view-right{
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
}


.shareView{
  margin-top:20rpx;
  width:100%;
  align-items:center;
  justify-content:space-between;
  display:flex;
}

.detail-textarea{
  margin-top:20rpx;
  padding-left: 30rpx;
  font-size:30rpx;
  width:93%;
  color:#444444;
}

.button-after{
  width:180rpx; 
  height:60rpx;
  font-size:28rpx;
  margin-left:0rpx;
  margin-right:30rpx;
  background-color:#FFDA33;
  border-radius:30rpx;
  line-height:60rpx;
}
.button-after::after{
  border:1px solid #FFDA33;
}

.bottom-view{
  background-color:#E4E3E4;
  position: fixed;
  height: 100rpx;
  bottom: 0;
  width: 100%;
  display:flex;
}

.bottom-view-button{
  width: 100%;
  height: 100%;
  color: white;
  text-align: center;
  vertical-align:middle;
  padding-top: 20rpx;
  font-size:40rpx
}

.post-button{
  background-color:#5196F8;
  width:90%;
  align-items:center;
  vertical-align:middle;
  color:#fff;
  height:80rpx;
}